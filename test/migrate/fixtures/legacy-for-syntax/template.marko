<!-- Array -->
<for(color in colors)>
    <li>${color}</li>
</for>

<!-- Array | iterator -->
<for(color in colors | iterator=input.iterator)>
    <li>${color}</li>
</for>

<!-- Array | separator -->
<for(color in colors | separator=", ")>
    <li>${color}</li>
</for>

<!-- Array | status-var -->
<for(color in colors | status-var=loop)>
    ${color}
    ${loop.getIndex()+1}) of ${loop.getLength()}
    <div if(loop.isFirst()) on-click(loop.getIndex() === 0 && "handleClick")> - FIRST</div>
    <if(loop.isLast())> - LAST</if>
    <if(!loop.isLast())> - NOT LAST</if>
</for>

